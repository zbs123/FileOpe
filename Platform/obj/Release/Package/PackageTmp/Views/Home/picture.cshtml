                    <a class="layui-btn layui-btn-sm layui-btn-normal" id="seacher-btn">&nbsp;&nbsp;搜索&nbsp;&nbsp;</a>
                </div>

            </div>
        </div>
        <!--搜索 end-->
        <!--搜索 end-->
        <div class="right-search share-btn" style="top:700px;left:0px;"><i class="layui-icon" style="font-size:36px;">&#xe641;</i></div>*@
